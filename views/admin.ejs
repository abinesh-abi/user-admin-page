<!DOCTYPE html>
<html>
  <head>
    <title><%= name %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container text-center">
      <h1 class="display-1">Admin Page</h1>
      <h1 class="display-4">Welcome  <%= name%></h1>

      <div class="input-group rounded">
        <input
          type="search"
          id="search"
          onkeyup="check()"
          onkeydown="check()"
          class="form-control rounded"
          placeholder="Search"
          aria-label="Search"
          aria-describedby="search-addon"
        />
        <span class="input-group-text border-0 bg-primary" id="search-addon">
          <b class="">Search</b>
        </span>
      </div>
      <h1 id="hi"></h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Number</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
          </tr>
        </thead>
        <tbody id="tableBody">
          <% dbUsers.forEach((element,i)=>{%>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= element.name %></td>
            <td><%= element.email %></td>
            <td>
              <a
                class="btn btn-success"
                href="http://127.0.0.1:3000/admin/edit/<%= element._id %>"
                >Edit</a
              >
            </td>
            <td>
              <a
                onclick='deleteUser("<%=element.email %>","<%=element.name%>")'
                class="btn btn-danger delete-btn"
                >Delete</a
              >
                <!-- onclick="deleteUser(element.email,element.name)" -->
            </td>
          </tr>
          <%}) %>
        </tbody>
      </table>
    </div>

    <!-- JavaScript Bundle with Popper -->

    <script>


      function check() {
        let inp = document.getElementById("search").value;
        fetch(`http://127.0.0.1:3000/admin/check/${inp}`, {
          method: "GET",
        })
          .then(function (response) {
            return response.json();
          })
          .then((response) => {
            // console.log(response);
            // document.getElementById("hi").innerHTML = response;
            return response
          }).then((response) => {
          var temp = "";
        if (response.length != 0) {
            // document.getElementById(tableBody).innerHTML =''
          response.forEach((element,i) => {

            temp += ` <tr>
            <th scope="row"> ${i+1}</th>
            <td> ${element.name}</td>
            <td> ${element.email} </td>
            <td>
              <a
                href="http://127.0.0.1:3000/admin/edit/${element._id}"
                class="btn btn-success"
                >Edit</a
              >
            </td>
            <td>
              <a
                onclick='delete-user(${element.email},${element.name})'
                class="btn btn-danger "
                >Delete</a
              >
            </td>
          </tr>`
            
          });
        }else{temp =''}
          document.getElementById('tableBody').innerHTML = temp;
          })

      }

      function deleteUser(email,name) {
        console.log(email);
        console.log(name);
       let confimDelete = confirm(`Are you sure you want to delete ${name}`) 
       console.log(confimDelete);
       if (confimDelete) {
        fetch(`http://127.0.0.1:3000/admin/delete/${email}`, {
          method: "GET",
        })
       }
      }


          </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
